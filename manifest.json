{
  "name": "Hinative",
  "version": "1.0",
  "description": "Useful Hinative tool!!",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "*://hinative.com/*",
    "unlimitedStorage"
  ],
  "page_action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_page": "html/options.html",
  "icons": {
    "16": "images/favicon.png",
    "32": "images/favicon.png",
    "48": "images/favicon.png",
    "128": "images/favicon.png"
  },
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["*://*.hinative.com/*"],
    "js": ["js/jquery-3.4.1.min.js", "js/script.js"],
    "run_at": "document_end"
  }]

}